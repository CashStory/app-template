              }
            ]
            field: "VD_4"
        id: 1
        unit: " %"
      }
      {
        name: "Spin"
        type: "line"
        chartOptions:
          date: "DATE"
          units:
            VALUE: " %"
          data:
            query:
              domain: "012_LINEC"
              ENTITY: "<%= dashboard.entityName %>"
              SCENARIO: "<%= requestersManager.DIM_SCENARIOS.CURRENT %>"
            precision:
              VALUE: ",.1f"
          value: "VALUE"
      }
      {
        name: "💳 Payment methods"
        type: "leaderboard"
        source:"vs last year"
        chartOptions:
          units:
            value: " %"
            evol: "%"
          variation: "VAR"
          data:

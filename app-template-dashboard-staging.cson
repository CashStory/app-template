            query: [
              {
                $match:
                  domain: "011_VALUD"
                  ENTITY: "<%= dashboard.entityName %>"
                  SCENARIO: "<%= requestersManager.DIM_SCENARIOS.PREVIOUS %>"
              }
            ]
            field: "VD_3"
          value:
            query: [
              {
                $match:
                  domain: "011_VALUD"
                  ENTITY: "<%= dashboard.entityName %>"
                  SCENARIO: "<%= requestersManager.DIM_SCENARIOS.CURRENT %>"
              }
            ]
            field: "VD_3"

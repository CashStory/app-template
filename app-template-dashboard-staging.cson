default:true
entityName: "{{ ENTITY_NAME }}"         #Init : Entity display
entityGroup: "{{ ENTITY_GROUP }}"       #Init : Group of entities displayed
report: "{{ report_id }}"
id: "{{ index }}"
categories: [
  {
    name: "KPI's"
    kpis: [
      {
        name: "🏭 Number of sites"
        comment: "<%=' ' + evolution + ' vs last year'%>"
        compute:
          evolution: "(value - comparison)/comparison"
        sentiment:
          evolution:
            domain: [
              0
            ]
            range: [
              "negative"
              "positive"
            ]
        type: "value-dynamic"
        precision:
          evolution: "+,.2%"
          value: ",.1f"
        value: "value"
        slide: 10101
        badge: "evolution"
        data:
          comparison:
            query: [
              {
                $match:
                  domain: "011_VALUD"
                  ENTITY: "<%= dashboard.entityName %>"  
                  SCENARIO: "<%= requestersManager.DIM_SCENARIOS.PREVIOUS %>"
              }
            ]
            field: "VD_1"
          value:
            query: [
              {
                $match:
                  domain: "011_VALUD"
                  ENTITY: "<%= dashboard.entityName %>" 
                  SCENARIO: "<%= requestersManager.DIM_SCENARIOS.CURRENT %>"
              }
            ]
            field: "VD_1"
        id: 0
        unit: " sites"
      }
      {
        name: "👍 New sites"
        comment: "<%=' ' + evolution + ' vs last month'%>"
        compute:
          evolution: "(value - comparison)/comparison"
        sentiment:
          evolution:
            domain: [
              0
            ]
            range: [
              "negative"
              "positive"
            ]
        type: "value-dynamic"
        precision:
          evolution: "+,.2%"
          value: ",.1f"
        value: "value"
        slide: 10101
        badge: "evolution"
        data:
          comparison:
            query: [
              {
                $match:
                  domain: "011_VALUD"
                  ENTITY: "<%= dashboard.entityName %>"
                  SCENARIO: "<%= requestersManager.DIM_SCENARIOS.PREVIOUS %>"
              }
            ] 
            field: "VD_2"
          value:
            query: [
              {
                $match:
                  domain: "011_VALUD"
                  ENTITY: "<%= dashboard.entityName %>"
                  SCENARIO: "<%= requestersManager.DIM_SCENARIOS.CURRENT %>"
              }
            ]
            field: "VD_2"
        id: 0
        unit: " new sites"
      }
      {
        name: "💰 Risk Value"
